<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cdemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/cairo</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Z your theme here. -->
    </style>

    <style name="button_flat_appearance">
        <item name="neuButtonStartColor">#1d222e</item>
        <item name="neuButtonEndColor">#1d222e</item>
        <item name="neuButtonBorder1StartColor">#738B9A</item>
        <item name="neuButtonBorder1EndColor">#738B9A</item>
        <item name="neuButtonBorder2StartColor">#738B9A</item>
        <item name="neuButtonBorder2EndColor">#738B9A</item>
        <item name="neuButtonPressedDarkShadowColor">#1d222e</item>
    </style>

    <style name="RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio</item>
    </style>

</resources>